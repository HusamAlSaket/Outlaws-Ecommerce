<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/css/auth.css">
  <title>Register - Ecommerce Outlaws</title>
</head>
<body>
<!-- Animated Background -->
<div class="background-animation">
  <div class="floating-shape"></div>
  <div class="floating-shape"></div>
  <div class="floating-shape"></div>
  <div class="floating-shape"></div>
  <div class="floating-shape"></div>
  <div class="gradient-orb"></div>
  <div class="gradient-orb"></div>
</div>

<div class="auth-container">
  <a href="/" class="brand-logo d-none d-md-block">
    <i class="fas fa-bolt"></i>Outlaws
  </a>

  <div class="auth-card register-card">
    <!-- Mobile brand logo -->
    <div class="d-block d-md-none">
      <a href="/" class="brand-logo">
        <i class="fas fa-bolt"></i>Outlaws
      </a>
    </div>

    <div class="brand-section">
      <div class="brand-title">
        <i class="fas fa-user-plus"></i>
        <span>Join Outlaws</span>
      </div>
      <p class="brand-subtitle">Create your account and start shopping</p>
      <div class="divider"></div>
    </div>

    <% if (showPasswordInfo) { %>
    <div class="alert alert-warning mb-3">
      <small><i class="fas fa-exclamation-triangle me-2"></i>Password must be at least 8 characters with uppercase, lowercase, and numbers</small>
    </div>
    <% } %>

    <% if (errors && errors.general) { %>
      <div class="alert alert-danger text-center mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <%= errors.general %>
      </div>
    <% } %>

    <form action="/register" method="POST">
      <div class="form-group">
        <i class="fas fa-user input-icon"></i>
        <input 
          type="text" 
          id="username" 
          name="username" 
          class="input-field" 
          placeholder="Full Name" 
          value="<%= oldInput?.username || '' %>"
          required
        >
        <% if (errors && errors.username) { %>
          <small class="error-msg"><%= errors.username %></small>
        <% } %>
      </div>

      <div class="form-group">
        <i class="fas fa-envelope input-icon"></i>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="input-field" 
          placeholder="Email Address" 
          value="<%= oldInput?.email || '' %>"
          required
        >
        <% if (errors && errors.email) { %>
          <small class="error-msg"><%= errors.email %></small>
        <% } %>
      </div>

      <div class="form-group">
        <i class="fas fa-lock input-icon"></i>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="input-field" 
          placeholder="Password" 
          required
        >
        <% if (errors && errors.password) { %>
          <small class="error-msg"><%= errors.password %></small>
        <% } %>
      </div>

      <button type="submit" class="btn-primary">
        <i class="fas fa-rocket"></i>
        Create Account
      </button>
    </form>

    <div class="auth-footer">
      <p>Already have an account? <a href="/login">Sign in here</a></p>
    </div>
  </div>
</div>

</body>
</html>