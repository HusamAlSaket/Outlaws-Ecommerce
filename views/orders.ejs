<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Orders - Ecommerce Outlaws</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/css/orders.css" />
  </head>
  <body>
    <div class="page-container">
      <%- include('partials/navbar') %>

      <!-- Orders Hero Section -->
      <section class="orders-hero">
        <div class="orders-hero-content">
          <!-- <nav class="breadcrumb-nav mb-2">
            <a href="/">Home</a> &gt; <span>Order History</span>
          </nav> -->
          <h1 class="orders-hero-title">Your Shopping Journey</h1>
          <div class="orders-hero-desc">All your purchases in one place. Track orders, relive your best finds, and shop with confidenceâ€”every step of the way.</div>
          <div class="orders-hero-stats">
            <div class="orders-stat-item">
              <span class="orders-stat-number">2020</span>
              <span class="orders-stat-label">Joined</span>
            </div>
            <div class="orders-stat-item">
              <span class="orders-stat-number"><%= orders ? orders.length : 0 %></span>
              <span class="orders-stat-label">Orders</span>
            </div>
            <div class="orders-stat-item">
              <span class="orders-stat-number">Fast</span>
              <span class="orders-stat-label">Shipping</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Main Content -->
      <section class="main-content">
        <div class="orders-container">
          <% if (orders && orders.length > 0) { %> <% orders.forEach(order => {
          %>
          <div class="order-card">
            <div class="order-header redesigned">
              <div class="order-header-main">
                <div class="order-id">Order #<%= order.orderNumber %></div>
                <span class="order-status-badge <%= order.status ? order.status.toLowerCase() : 'processing' %>">
                  <i class="fas fa-circle"></i> <%= order.status ? order.status.charAt(0).toUpperCase() + order.status.slice(1) : 'Processing' %>
                </span>
              </div>
              <div class="order-header-meta">
                <div class="order-date">
                  <i class="far fa-calendar-alt me-1"></i>
                  <%= new Date(order.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </div>
                <div class="order-total">
                  $<%= order.totalAmount.toFixed(2) %>
                </div>
              </div>
            </div>
            <div class="order-content redesigned">
              <div class="order-items-table-wrapper">
                <table class="order-items-table">
                  <thead class="table-header">
                    <tr>
                      <th>PRODUCT</th>
                      <th>PRICE</th>
                      <th style="text-align: center">QUANTITY</th>
                      <th style="text-align: right">TOTAL</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.items.forEach(item => { %>
                    <tr class="order-item">
                      <td>
                        <div class="product-info">
                          <div class="product-image">
                            <% if (item.image) { %>
                            <img
                              src="<%= item.image %>"
                              alt="<%= item.title %>"
                            />
                            <% } else { %>
                            <div class="product-image-placeholder">
                              <i class="fas fa-image"></i>
                            </div>
                            <% } %>
                          </div>
                          <div class="product-details">
                            <h6><%= item.title %></h6>
                            <div class="product-sku">
                              SKU: <%= item._id.toString().slice(-6).toUpperCase() %>
                            </div>
                          </div>
                        </div>
                      </td>
                      <td class="price-cell">$<%= item.price.toFixed(2) %></td>
                      <td class="quantity-cell"><%= item.qty %></td>
                      <td class="total-cell">
                        $<%= (item.price * item.qty).toFixed(2) %>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <div class="shipping-section">
                <div class="shipping-title">SHIPPING ADDRESS</div>
                <div class="shipping-address">
                  <strong><%= order.shippingInfo.fullName %></strong><br />
                  <%= order.shippingInfo.address %><br />
                  <%= order.shippingInfo.city %>, <%= order.shippingInfo.postalCode %><br />
                  <%= order.shippingInfo.country %>
                </div>
              </div>
              <!-- <div class="order-actions">
                <a href="/products" class="btn btn-reorder"><i class="fas fa-redo-alt me-1"></i>Reorder</a>
              </div> -->
            </div>
          </div>
          <% }); %> <% } else { %>
          <div class="empty-orders">
            <div class="empty-icon">
              <i class="fas fa-shopping-bag"></i>
            </div>
            <h2 class="empty-title">No Orders Yet</h2>
            <p class="empty-subtitle">
              You haven't placed any orders yet. Start shopping to see your
              orders here!
            </p>
            <a href="/products" class="btn-shop">
              <i class="fas fa-shopping-cart"></i>
              Start Shopping
            </a>
          </div>
          <% } %>
        </div>
      </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
