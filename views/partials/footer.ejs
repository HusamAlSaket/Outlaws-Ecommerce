            <i class="fas fa-shipping-fast me-1"></i>Free Shipping
          </span>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="col-md-4">
        <h6 class="text-uppercase fw-semibold mb-3" style="color: #ffc107; letter-spacing: 1px;">Quick Links</h6>
        <ul class="list-unstyled small">
          <li class="mb-2">
            <a href="/" class="text-light text-decoration-none d-flex align-items-center" style="transition: all 0.3s ease; opacity: 0.8;" onmouseover="this.style.opacity='1'; this.style.transform='translateX(5px)'" onmouseout="this.style.opacity='0.8'; this.style.transform='translateX(0)'">
              <i class="fas fa-home me-2"></i>Home
            </a>
          </li>
          <li class="mb-2">
            <a href="/products" class="text-light text-decoration-none d-flex align-items-center" style="transition: all 0.3s ease; opacity: 0.8;" onmouseover="this.style.opacity='1'; this.style.transform='translateX(5px)'" onmouseout="this.style.opacity='0.8'; this.style.transform='translateX(0)'">
