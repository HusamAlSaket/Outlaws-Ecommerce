<footer class="footer mt-auto text-light pt-5 pb-3" style="background: linear-gradient(135deg, #001f3f 0%, #003366 100%); position: relative; overflow: hidden;">
  <!-- Animated background elements -->
  <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%); pointer-events: none;"></div>
  
  <div class="container position-relative">
    <div class="row gy-4">
      <!-- Brand Info -->
      <div class="col-md-4">
        <h5 class="text-white fw-bold mb-3" style="display: flex; align-items: center;">
