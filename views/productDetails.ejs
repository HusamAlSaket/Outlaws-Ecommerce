<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %> 
  <title><%= product.title %> - Ecommerce Outlaws</title>
  <link href="/css/productDetails.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <!-- Breadcrumb -->
  <div class="container">
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/products">Products</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= product.title %></li>
      </ol>
    </nav>
  </div>

  <!-- Product Details -->
  <section class="product-details">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <div class="product-image-container">
            <img src="<%= product.image %>" class="product-image" alt="<%= product.title %>">
          </div>
        </div>
        <div class="col-lg-6">
          <div class="product-info">
            <h1 class="product-title"><%= product.title %></h1>
            <p class="product-description"><%= product.description %></p>
            <div class="product-price">$<%= product.price %></div>
            <span class="product-category"><%= product.category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase()) %></span>
            
            <div class="stock-status">
              <% if (product.quantity > 0) { %>
                <div class="stock-available">
                  <i class="fas fa-check-circle"></i>
                  <span><%= product.quantity %> items available</span>
                </div>
              <% } else { %>
                <div class="stock-out">
                  <i class="fas fa-times-circle"></i>
                  <span>Out of stock</span>
                </div>
              <% } %>
            </div>
            
            <% if (product.quantity > 0) { %>
              <div class="quantity-selector">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" class="quantity-input" value="1" min="1" max="<%= product.quantity %>">
              </div>
              
              <button class="btn btn-add-cart" onclick="addToCartWithQuantity('<%= product._id %>', this)">
                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
              </button>
            <% } else { %>
              <button class="btn btn-add-cart btn-disabled" disabled>
                <i class="fas fa-ban me-2"></i>Out of Stock
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- Reviews Section (moved above footer) -->
  <section class="product-reviews-section py-5">
    <div class="container">
      <div class="outlaw-reviews-box p-4 p-md-5 mb-4">
        <!-- Reviews Header with Statistics -->
        <div class="reviews-header mb-5">
          <h2 class="mb-3 text-navy fw-bold outlaw-reviews-title">Customer Reviews</h2>
          
          <% if (reviews && reviews.length > 0) { %>
            <% 
              // Calculate review statistics
              const totalReviews = reviews.length;
              const avgRating = reviews.reduce((sum, review) => sum + review.rating, 0) / totalReviews;
              const ratingDistribution = [0, 0, 0, 0, 0];
              reviews.forEach(review => ratingDistribution[review.rating - 1]++);
            %>
            
            <div class="row align-items-center mb-4">
              <!-- Overall Rating -->
              <div class="col-md-4 text-center">
                <div class="overall-rating">
                  <div class="rating-number"><%= avgRating.toFixed(1) %></div>
                  <div class="rating-stars mb-2">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <span class="<%= i <= Math.round(avgRating) ? 'text-navy' : 'text-muted' %>">★</span>
                    <% } %>
                  </div>
                  <div class="rating-text">Based on <%= totalReviews %> review<%= totalReviews > 1 ? 's' : '' %></div>
                </div>
              </div>
              
              <!-- Rating Distribution -->
              <div class="col-md-8">
                <div class="rating-distribution">
                  <% for (let i = 5; i >= 1; i--) { %>
                    <% 
                      const ratingCount = ratingDistribution[i-1] || 0;
                      const percentage = totalReviews > 0 && ratingCount > 0 ? (ratingCount / totalReviews * 100) : 0;
                    %>
                    <div class="rating-bar-row">
                      <span class="rating-label"><%= i %> ★</span>
                      <div class="rating-bar">
                        <div class="rating-fill" style="width: <%= percentage.toFixed(1) %>%"></div>
                      </div>
                      <span class="rating-count">(<%= ratingCount %>)</span>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>

        <!-- Review Form -->
        <% if (canReview && !hasReviewed) { %>
          <div class="review-form-section mb-5">
            <div class="card outlaw-review-form">
              <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Write a Review</h4>
                <small class="text-muted">Share your experience with this product</small>
              </div>
              <div class="card-body">
                <form action="/reviews" method="POST">
                  <input type="hidden" name="product" value="<%= product._id %>">
                  
                  <div class="mb-4">
                    <label class="form-label fw-bold">Your Rating</label>
                    <div class="star-rating">
                      <input type="radio" id="star5" name="rating" value="5" required>
                      <label for="star5" class="star">★</label>
                      <input type="radio" id="star4" name="rating" value="4">
                      <label for="star4" class="star">★</label>
                      <input type="radio" id="star3" name="rating" value="3">
                      <label for="star3" class="star">★</label>
                      <input type="radio" id="star2" name="rating" value="2">
                      <label for="star2" class="star">★</label>
                      <input type="radio" id="star1" name="rating" value="1">
                      <label for="star1" class="star">★</label>
                    </div>
                  </div>
                  
                  <div class="mb-4">
                    <label for="comment" class="form-label fw-bold">Your Review</label>
                    <textarea class="form-control" id="comment" name="comment" rows="4" 
                              placeholder="Tell others what you think about this product..." required></textarea>
                    <div class="form-text">Minimum 10 characters</div>
                  </div>
                  
                  <button type="submit" class="btn btn-navy btn-lg">
                    <i class="fas fa-paper-plane me-2"></i>Submit Review
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% } else if (typeof canReview !== 'undefined' && !canReview && !hasReviewed) { %>
          <div class="alert alert-info d-flex align-items-center mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <span>You must purchase this product to leave a review.</span>
          </div>
        <% } %>

        <!-- Individual Reviews -->
        <% if (reviews && reviews.length > 0) { %>
          <div class="reviews-list">
            <h4 class="mb-4 text-navy">All Reviews (<%= reviews.length %>)</h4>
            
            <% reviews.forEach(function(review, index) { if (review.isVisible !== false) { %>
              <div class="review-item">
                <div class="review-header">
                  <div class="reviewer-info">
                    <div class="reviewer-avatar">
                      <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="reviewer-details">
                      <h6 class="reviewer-name"><%= review.user && review.user.username ? review.user.username : 'Anonymous' %></h6>
                      <div class="review-meta">
                        <div class="review-stars">
                          <% for (let i = 1; i <= 5; i++) { %>
                            <span class="<%= i <= review.rating ? 'text-navy' : 'text-muted' %>">★</span>
                          <% } %>
                        </div>
                        <span class="review-date">
                          <i class="fas fa-calendar-alt me-1"></i>
                          <%= review.createdAt ? review.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : '' %>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="review-rating-badge">
                    <%= review.rating %>.0
                  </div>
                </div>
                
                <div class="review-content">
                  <p><%= review.comment %></p>
                </div>
                
                <div class="review-footer">
                  <div class="review-actions">
                    <span class="review-helpful">
                      <i class="fas fa-thumbs-up me-1"></i>
                      Helpful
                    </span>
                    <span class="review-report">
                      <i class="fas fa-flag me-1"></i>
                      Report
                    </span>
                  </div>
                </div>
              </div>
            <% }} ) %>
          </div>
        <% } else { %>
          <div class="no-reviews">
            <div class="no-reviews-icon">
              <i class="fas fa-star"></i>
            </div>
            <h4>No reviews yet</h4>
            <p>Be the first to review this product and help other customers make informed decisions!</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Auto-hide flash messages
    document.addEventListener('DOMContentLoaded', function() {
      var flash = document.querySelector('.outlaws-flash');
      if (flash) {
        setTimeout(function() {
          flash.style.transition = 'opacity 0.5s';
          flash.style.opacity = 0;
          setTimeout(function() { flash.remove(); }, 500);
        }, 3000);
      }

      // Animate rating bars
      const ratingFills = document.querySelectorAll('.rating-fill[data-width]');
      ratingFills.forEach(fill => {
        const width = fill.getAttribute('data-width');
        setTimeout(() => {
          fill.style.width = width + '%';
        }, 300);
      });
    });
  </script>
  
  <script src="/js/productDetails.js"></script>
</body>
</html>
