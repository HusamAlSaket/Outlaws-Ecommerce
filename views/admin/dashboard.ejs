<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %> - Professional Admin Dashboard</title>
    
    <!-- External Libraries -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Chart.js - Load before modules -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    
    <!-- Custom Admin Dashboard Styles -->
    <link href="/css/admin-dashboard.css" rel="stylesheet">
</head>
<body>
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    
    <!-- Sidebar -->
    <div class="sidebar active" id="sidebar">
        <div class="sidebar-header">
            <div class="logo-icon">
                <i class="fas fa-crown"></i>
            </div>
            <h3>Admin Panel</h3>
        </div>
        <ul class="sidebar-menu">
            <li><a href="/admin/dashboard" class="active">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a></li>
            <li><a href="/admin/users">
                <i class="fas fa-users"></i>
                <span>Users</span>
            </a></li>
            <li><a href="/admin/products">
                <i class="fas fa-box"></i>
                <span>Products</span>
            </a></li>
            <li><a href="/admin/orders">
                <i class="fas fa-shopping-cart"></i>
                <span>Orders</span>
            </a></li>
            <li><a href="/admin/reviews">
                <i class="fas fa-star"></i>
                <span>Reviews</span>
            </a></li>
            <li><a href="/admin/analytics">
                <i class="fas fa-chart-bar"></i>
                <span>Analytics</span>
            </a></li>
            <li><a href="/admin/settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a></li>
            <li><a href="#" onclick="dashboard.confirmLogout(event)">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a></li>
        </ul>
    </div>
    
    <!-- Main Content -->
    <div class="main-content shifted" id="mainContent">
        <!-- Top Navigation -->
        <div class="top-nav">
            <div class="nav-left">
                <button class="menu-toggle" id="menuToggle" title="Toggle Sidebar (Ctrl+B)">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="breadcrumb">Admin / Dashboard</div>
            </div>
            <div class="user-info">
                <div class="user-avatar">
                    <%= (user && user.username) ? user.username.charAt(0).toUpperCase() : 'A' %>
                </div>
                <span>Welcome, <%= (user && user.username) ? user.username : 'Admin' %>!</span>
            </div>
        </div>
        
        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Statistics Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-number" data-target="<%= stats.totalUsers %>"><%= stats.totalUsers %></div>
                    <div class="stat-label">Total Users</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>+12% this month</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-number" data-target="<%= stats.totalProducts %>"><%= stats.totalProducts %></div>
                    <div class="stat-label">Total Products</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>+5% this month</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stat-number" data-target="<%= stats.totalOrders %>"><%= stats.totalOrders %></div>
                    <div class="stat-label">Total Orders</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i>
                        <span>+18% this month</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-number" data-target="<%= stats.totalRevenue %>">$<%= stats.totalRevenue.toFixed(2) %></div>
                    <div class="stat-label">Total Revenue</div>
                    <div class="stat-change <%= stats.totalRevenue > 0 ? 'positive' : 'negative' %>">
                        <i class="fas fa-arrow-<%= stats.totalRevenue > 0 ? 'up' : 'down' %>"></i>
                        <span><%= stats.totalRevenue > 0 ? '+8%' : '0%' %> this month</span>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="content-grid">
                <div class="content-card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-line"></i> Orders Overview</h5>
                        <div class="card-actions">
                            <button class="btn-icon" onclick="dashboard.refreshChart('orders')" title="Refresh Data">
                                <i class="fas fa-refresh"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="ordersChart"></canvas>
                            <div class="chart-loading">
                                <i class="fas fa-spinner fa-spin"></i>
                                <p>Loading chart data...</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-pie"></i> Revenue Distribution</h5>
                        <div class="card-actions">
                            <button class="btn-icon" onclick="dashboard.refreshChart('revenue')" title="Refresh Data">
                                <i class="fas fa-refresh"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="revenueChart"></canvas>
                            <div class="chart-loading">
                                <i class="fas fa-spinner fa-spin"></i>
                                <p>Loading chart data...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders Table -->
            <div class="content-card">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Recent Orders</h5>
                    <div class="card-actions">
                        <button class="btn-icon" title="Refresh Orders">
                            <i class="fas fa-refresh"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <% if (recentOrders.length > 0) { %>
                        <div class="table-container">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% recentOrders.forEach(order => { %>
                                        <tr>
                                            <td><strong><%= order.orderNumber %></strong></td>
                                            <td>
                                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                                    <div class="user-avatar" style="width: 30px; height: 30px; font-size: 0.8rem;">
                                                        <%= order.user.username.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <%= order.user.username %>
                                                </div>
                                            </td>
                                            <td><strong>$<%= order.totalAmount.toFixed(2) %></strong></td>
                                            <td>
                                                <span class="badge bg-<%= order.isPaid ? 'success' : 'warning' %>">
                                                    <i class="fas fa-<%= order.isPaid ? 'check' : 'clock' %>"></i>
                                                    <%= order.isPaid ? 'Paid' : 'Unpaid' %>
                                                </span>
                                            </td>
                                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h6>No Recent Orders</h6>
                            <p>No orders have been placed recently.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Admin Dashboard JavaScript (Modular Version with Fallback) -->
    <script type="module" src="/js/admin-dashboard-modular.js"></script>
    <script nomodule>
        console.warn('ES6 modules not supported, loading fallback...');
        // Fallback for browsers that don't support modules
        const script = document.createElement('script');
        script.src = '/js/chart-test.js';
        document.head.appendChild(script);
    </script>
</body>
</html>