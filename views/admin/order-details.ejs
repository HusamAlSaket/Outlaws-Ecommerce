<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin-dashboard.css" rel="stylesheet">
    <link href="/css/admin-orders-perfect.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/admin-sidebar', { currentPage: 'orders' }) %>
    <div class="main-content shifted" id="mainContent">
        <div class="content">
            <div class="page-header mb-4">
                <h1 class="page-title">
                    <i class="fas fa-file-invoice"></i>
                    Order Details - #<%= order.orderNumber %>
                </h1>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <h5><i class="fas fa-info-circle text-primary"></i> Order Information</h5>
                    <ul class="list-unstyled mb-3">
                        <li><strong>Order Number:</strong> #<%= order.orderNumber %></li>
                        <li><strong>Total Amount:</strong> $<%= order.totalAmount.toFixed(2) %></li>
                        <li><strong>Payment Status:</strong> <span class="badge <%= order.isPaid ? 'bg-success' : 'bg-warning' %>"><%= order.isPaid ? 'PAID' : 'UNPAID' %></span></li>
                        <li><strong>Payment Method:</strong> <%= order.paymentMethod %></li>
                        <li><strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %></li>
                    </ul>
                    <h5><i class="fas fa-user text-primary"></i> Customer Information</h5>
                    <ul class="list-unstyled mb-3">
                        <li><strong>Name:</strong> <%= order.user?.username %></li>
                        <li><strong>Email:</strong> <%= order.user?.email %></li>
                        <li><strong>Full Name:</strong> <%= order.shippingInfo?.fullName %></li>
                        <li><strong>Address:</strong> <%= order.shippingInfo?.address %></li>
                        <li><strong>City:</strong> <%= order.shippingInfo?.city %></li>
                        <li><strong>Country:</strong> <%= order.shippingInfo?.country %></li>
                        <li><strong>Postal Code:</strong> <%= order.shippingInfo?.postalCode %></li>
                    </ul>
                    <h5><i class="fas fa-box text-primary"></i> Order Items (<%= order.items.length %>)</h5>
                    <div class="row">
                        <% order.items.forEach(item => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                                                                                <% 
                                    let imagePath = item.image || item.productId?.image;
                                    if (imagePath) {
                                        if (!imagePath.startsWith('http://') && !imagePath.startsWith('https://')) {
                                            if (imagePath.startsWith('../public/')) {
                                                imagePath = imagePath.replace('../public/', '/');
                                            } else if (!imagePath.startsWith('/')) {
                                                imagePath = '/' + imagePath;
                                            }
                                        }
                                    } else {
                                        imagePath = '/images/default-user.png';
                                    }
                                %>
                                                                                                <img src="<%= imagePath %>" class="card-img-top" alt="<%= item.title %>" style="max-height:180px;object-fit:cover;">
                                <div class="card-body">
                                    <h6 class="card-title"><%= item.title %></h6>
                                    <p class="card-text">Price: $<%= item.price.toFixed(2) %></p>
                                    <p class="card-text">Quantity: <%= item.qty %></p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
