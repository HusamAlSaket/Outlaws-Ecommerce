<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile - Ecommerce Outlaws</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body>
    <% const errorsSafe = typeof errors !== 'undefined' ? errors : {}; %>
    <% const oldInputSafe = typeof oldInput !== 'undefined' ? oldInput : {}; %>
    <div class="page-container">
      <%- include('partials/navbar') %>

      <!-- Page Header -->
      <section class="page-header">
        <div class="profile-header-content">
          <div class="profile-avatar">
            <img
              src="<%= (!user.image || user.image === 'undefined' || user.image.trim() === '' ) ? '/images/default-user.png' : user.image %>"
              alt="Profile Image"
              class="profile-img"
              style="
                width: 120px;
                height: 120px;
                object-fit: cover;
                border-radius: 50%;
                border: 3px solid #001f3f;
              "
              onerror="this.onerror=null;this.src='/images/default-user.png';"
            />
          </div>
          <div class="profile-info">
            <h1 class="page-title">Welcome back, <%= user.username %></h1>
            <p class="page-subtitle">
              Manage your profile and view your orders
            </p>
          </div>
          <div class="profile-actions">
            <div class="quick-stat">
              <div class="quick-stat-value">
                <%= orders ? orders.length : 0 %>
              </div>
              <div class="quick-stat-label">Orders</div>
            </div>
            <div class="quick-stat">
              <div class="quick-stat-value">
                $<%= orders && orders.length > 0 ? orders.reduce(function(total,
                order) { return total + order.totalAmount; }, 0).toFixed(0) :
                '0' %>
              </div>
              <div class="quick-stat-label">Spent</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Main Content -->
      <section class="main-content">
        <div class="profile-container">
          <!-- Profile Information -->
          <div class="profile-card">
            <div class="card-header">
              <div class="card-icon">
                <i class="fas fa-user-circle"></i>
              </div>
              <h2 class="card-title">Profile Information</h2>
            </div>
            <div class="card-content">
              <div class="info-grid">
                <div class="info-item">
                  <div class="info-icon">
                    <i class="fas fa-user"></i>
                  </div>
                  <div class="info-content">
                    <div class="info-label">Username</div>
                    <div class="info-value"><%= user.username %></div>
                  </div>
                </div>
                <div class="info-item">
                  <div class="info-icon">
                    <i class="fas fa-envelope"></i>
                  </div>
                  <div class="info-content">
                    <div class="info-label">Email</div>
                    <div class="info-value"><%= user.email %></div>
                  </div>
                </div>
                <div class="info-item">
                  <div class="info-icon">
                    <i class="fas fa-calendar"></i>
                  </div>
                  <div class="info-content">
                    <div class="info-label">Member Since</div>
                    <div class="info-value">
                      <%= new Date(user.createdAt ||
                      Date.now()).toLocaleDateString('en-US', { year: 'numeric',
                      month: 'long', day: 'numeric' }) %>
                    </div>
                  </div>
                </div>
                <div class="info-item">
                  <div class="info-icon">
                    <i class="fas fa-shield-alt"></i>
                  </div>
                  <div class="info-content">
                    <div class="info-label">Account Status</div>
                    <div class="info-value">Active</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Order Statistics -->
          <div class="profile-card">
            <div class="card-header">
              <div class="card-icon">
                <i class="fas fa-chart-bar"></i>
              </div>
              <h2 class="card-title">Order Statistics</h2>
            </div>
            <div class="card-content">
              <div class="stats-grid">
                <div class="stat-card">
                  <div class="stat-icon">
                    <i class="fas fa-shopping-bag"></i>
                  </div>
                  <div class="stat-value">
                    <%= orders ? orders.length : 0 %>
                  </div>
                  <div class="stat-label">Total Orders</div>
                </div>
                <div class="stat-card">
                  <div class="stat-icon">
                    <i class="fas fa-dollar-sign"></i>
                  </div>
                  <div class="stat-value">
                    $<%= orders && orders.length > 0 ?
                    orders.reduce(function(total, order) { return total +
                    order.totalAmount; }, 0).toFixed(2) : '0.00' %>
                  </div>
                  <div class="stat-label">Total Spent</div>
                </div>
                <div class="stat-card">
                  <div class="stat-icon">
                    <i class="fas fa-box"></i>
                  </div>
                  <div class="stat-value">
                    <%= orders && orders.length > 0 ?
                    orders.reduce(function(total, order) { return total +
                    order.items.reduce(function(itemTotal, item) { return
                    itemTotal + item.qty; }, 0); }, 0) : 0 %>
                  </div>
                  <div class="stat-label">Items Purchased</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Orders -->
          <div class="profile-card">
            <div class="card-header">
              <div class="card-icon">
                <i class="fas fa-clock"></i>
              </div>
              <h2 class="card-title">Recent Orders</h2>
            </div>
            <div class="card-content">
              <% if (orders && orders.length > 0) { %>
              <div class="recent-orders">
                <% orders.slice(0, 5).forEach(order => { %>
                <div class="order-item">
                  <div class="order-info">
                    <div class="order-id">
                      Order #<%= order._id.toString().slice(-8).toUpperCase() %>
                    </div>
                    <div class="order-date">
                      Placed on <%= new
                      Date(order.createdAt).toLocaleDateString('en-US', { year:
                      'numeric', month: 'long', day: 'numeric' }) %>
                    </div>
                  </div>
                  <div class="order-total">
                    $<%= order.totalAmount.toFixed(2) %>
                  </div>
                </div>
                <% }); %>
              </div>
              <div class="text-center mt-3">
                <a href="/orders" class="btn btn-primary">
                  <i class="fas fa-list me-2"></i>
                  View All Orders
                </a>
              </div>
              <% } else { %>
              <div class="empty-state">
                <div class="empty-icon">
                  <i class="fas fa-shopping-bag"></i>
                </div>
                <h3>No Orders Yet</h3>
                <p>
                  You haven't placed any orders yet. Start shopping to see your
                  orders here!
                </p>
                <a href="/products" class="btn btn-primary mt-3">
                  <i class="fas fa-shopping-cart me-2"></i>
                  Start Shopping
                </a>
              </div>
              <% } %>
            </div>
          </div>

          <!-- Profile Update Form -->
          <div class="profile-card">
            <div class="card-header">
              <div class="card-icon">
                <i class="fas fa-user-edit"></i>
              </div>
              <h2 class="card-title">Update Profile</h2>
            </div>
            <div class="card-content">
              <form
                action="/profile"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="mb-3">
                  <label for="image" class="form-label">Profile Image</label>
                  <input
                    type="file"
                    name="image"
                    id="image"
                    class="form-control"
                    accept="image/*"
                  />
                </div>
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    name="username"
                    id="username"
                    class="form-control"
                    value="<%= user.username %>"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control <%= errorsSafe.email ? 'is-invalid' : '' %>"
                    value="<%= oldInputSafe.email ? oldInputSafe.email : user.email %>"
                    required
                  />
                  <% if (errorsSafe.email) { %>
                    <div class="invalid-feedback"><%= errorsSafe.email %></div>
                  <% } %>
                </div>
                <button type="submit" class="btn btn-primary">
                  Update Profile
                </button>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
