<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop - Ecommerce Outlaws</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/products.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar') %>

    <!-- âœ… ENHANCED SHOP HEADER -->
    <section class="shop-header">
      <div class="container">
        <h1>ðŸ”¥ Outlaw Collection</h1>
        <p class="lead">
          Where rebels find their style. Curated pieces for those who dare to be
          different.
        </p>
        <div class="shop-stats">
          <div class="shop-stat">
            <h3>500+</h3>
            <p>Unique Pieces</p>
          </div>
          <div class="shop-stat">
            <h3>24/7</h3>
            <p>Fresh Drops</p>
          </div>
          <div class="shop-stat">
            <h3>100%</h3>
            <p>Attitude</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Search Form -->
    <div class="container mb-4">
      <form method="GET" action="/products" class="row g-2 align-items-center bg-light p-3 rounded shadow-sm">
        <div class="col-md-5 mb-2 mb-md-0">
          <div class="input-group">
            <span class="input-group-text bg-white"><i class="fas fa-search"></i></span>
            <input type="text" name="search" placeholder="Search products..." class="form-control" value="<%= query.search || '' %>">
          </div>
        </div>
        <div class="col-md-4 mb-2 mb-md-0">
          <div class="input-group">
            <span class="input-group-text bg-white"><i class="fas fa-list"></i></span>
            <select name="category" class="form-select">
              <option value="">All Categories</option>
              <option value="men-jeans" <%= query.category === "men-jeans" ? 'selected' : '' %>>men jeans</option>
              <option value="women-shirts" <%= query.category === "women-shirts" ? 'selected' : '' %>>women shirts</option>
              <option value="men-sneakers" <%= query.category === "men-sneakers" ? 'selected' : '' %>>men sneakers</option>
              <option value="outerwear" <%= query.category === "outerwear" ? 'selected' : '' %>>outerwear</option>
              <option value="women-hoodies" <%= query.category === "women-hoodies" ? 'selected' : '' %>>women hoodies</option>
            </select>
          </div>
        </div>
        <div class="col-md-3 d-grid">
          <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-filter me-1"></i> Filter
          </button>
        </div>
      </form>
    </div>

    <!-- âœ… ENHANCED PRODUCT GRID -->
    <section class="product-grid">
      <div class="container">
        <h2 class="section-title">Featured Outlaws</h2>
        <div class="row g-4">
          <% products.forEach((product, index) => { %>
          <div class="col-lg-4 col-md-6 fade-in" data-index="<%= index %>">
            <div class="card product-card h-100">
              <div class="card-wrapper">
                <img
                  src="<%= product.image %>"
                  class="card-img-top"
                  alt="<%= product.title %>"
                />
                <span class="badge-category"><%= product.category %></span>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="product-description">
                  <%= product.description.substring(0, 80) %>...
                </p>
                <div class="mt-auto">
                  <p class="product-price">$<%= product.price.toFixed(2) %></p>
                  <div class="stock-info">
                    <% if (product.quantity > 0) { %>
                      <span class="stock-available">
                        <i class="fas fa-check-circle"></i>
                        <%= product.quantity %> in stock
                      </span>
                    <% } else { %>
                      <span class="stock-out">
                        <i class="fas fa-times-circle"></i>
                        Out of stock
                      </span>
                    <% } %>
                  </div>
                  <div class="product-actions">
                    <a href="/products/<%= product._id %>" class="btn btn-view">
                      <i class="fas fa-eye"></i>Quick View
                    </a>
                    <% if (product.quantity > 0) { %>
                      <button
                        class="btn btn-cart"
                        onclick="addToCart('<%= product._id %>', this)"
                      >
                        <i class="fas fa-shopping-bag"></i>Add to Bag
                      </button>
                    <% } else { %>
                      <button class="btn btn-cart btn-disabled" disabled>
                        <i class="fas fa-ban"></i>Out of Stock
                      </button>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        
        <!-- âœ… PAGINATION -->
        <% if (pagination && pagination.pages > 1) { %>
        <%
          // Build query parameters properly
          let queryParams = [];
          if (query.search) queryParams.push('search=' + encodeURIComponent(query.search));
          if (query.category) queryParams.push('category=' + encodeURIComponent(query.category));
          let baseQuery = queryParams.length > 0 ? '&' + queryParams.join('&') : '';
        %>
        <nav aria-label="Product pagination" class="mt-5">
          <ul class="pagination justify-content-center">
            <% if (pagination.current > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/products?page=<%= pagination.current - 1 %><%= baseQuery %>">
                  <i class="fas fa-chevron-left"></i> Previous
                </a>
              </li>
            <% } %>
            
            <% for(let i = 1; i <= pagination.pages; i++) { %>
              <li class="page-item <%= pagination.current == i ? 'active' : '' %>">
                <a class="page-link" href="/products?page=<%= i %><%= baseQuery %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
            
            <% if (pagination.current < pagination.pages) { %>
              <li class="page-item">
                <a class="page-link" href="/products?page=<%= pagination.current + 1 %><%= baseQuery %>">
                  Next <i class="fas fa-chevron-right"></i>
                </a>
              </li>
            <% } %>
          </ul>
          
          <!-- Pagination Info -->
        </nav>
        <% } %>
      </div>
    </section>
    <%- include('partials/footer') %>
    <script src="/js/products.js"></script>
  </body>
</html>
