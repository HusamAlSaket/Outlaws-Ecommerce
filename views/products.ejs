<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop - Ecommerce Outlaws</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary: #001f3f;
        --secondary: #00b894;
        --text-dark: #222;
        --light-gray: #f8f9fa;
        --white: #ffffff;
      }

      body {
        font-family: "Barlow", sans-serif;
        background-color: var(--white);
        color: var(--text-dark);
        line-height: 1.6;
      }

      .navbar {
        background-color: var(--primary);
        box-shadow: 0 2px 10px rgba(0, 31, 63, 0.1);
      }

      .navbar-brand,
      .nav-link {
        color: white !important;
        font-weight: 600;
      }

      /* ENHANCED SHOP HEADER */
      .shop-header {
        background: linear-gradient(
            135deg,
            rgba(0, 31, 63, 0.8) 0%,
            rgba(0, 31, 63, 0.6) 100%
          ),
          url("/images/hero2.jpg");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: white;
        height: 85vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
      }

      .shop-header::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          45deg,
          transparent,
          rgba(0, 123, 255, 0.1),
          transparent
        );
        animation: headerGlow 4s ease-in-out infinite alternate;
      }

      @keyframes headerGlow {
        0% {
          opacity: 0.3;
        }
        100% {
          opacity: 0.6;
        }
      }

      .shop-header .container {
        position: relative;
        z-index: 2;
      }

      .shop-header h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        background: linear-gradient(45deg, #ffffff, #e3f2fd, #ffffff);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: titleShimmer 3s ease-in-out infinite;
      }

      @keyframes titleShimmer {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }

      .shop-header .lead {
        font-size: 1.3rem;
        opacity: 0.9;
        margin-bottom: 2rem;
        font-weight: 400;
      }

      .shop-stats {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-top: 2rem;
      }

      .shop-stat {
        text-align: center;
      }

      .shop-stat h3 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: white;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
      }

      .shop-stat p {
        font-size: 0.9rem;
        opacity: 0.8;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      /* ENHANCED PRODUCT GRID */
      .product-grid {
        padding: 80px 0;
        background: linear-gradient(
          180deg,
          var(--white) 0%,
          var(--light-gray) 100%
        );
      }

      .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary);
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary), #0066cc);
        transform: translateX(-50%);
        border-radius: 2px;
      }

      .product-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 25px rgba(0, 31, 63, 0.08);
        background: white;
        position: relative;
        height: 100%;
      }

      .product-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          135deg,
          transparent,
          rgba(0, 31, 63, 0.05),
          transparent
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 15px;
        z-index: 1;
      }

      .product-card:hover::before {
        opacity: 1;
      }

      .product-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 31, 63, 0.15);
        border: 1px solid rgba(0, 31, 63, 0.1);
      }

      .product-card img {
        height: 280px;
        object-fit: cover;
        object-position: center 30%;
        transition: transform 0.4s ease;
        border-radius: 15px 15px 0 0;
      }

      .product-card:hover img {
        transform: scale(1.05);
      }

      .product-card .card-body {
        padding: 1.5rem;
        position: relative;
        z-index: 2;
      }

      .product-card h5 {
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.8rem;
        font-size: 1.2rem;
        transition: color 0.3s ease;
      }

      .product-card:hover h5 {
        color: #0066cc;
      }

      .product-description {
        color: #6c757d;
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 1rem;
      }

      .product-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 1.5rem;
      }

      .badge-category {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(135deg, var(--primary), #0066cc);
        color: white;
        padding: 6px 12px;
        font-size: 0.75rem;
        border-radius: 20px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 3;
        box-shadow: 0 4px 15px rgba(0, 31, 63, 0.3);
      }

      .card-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 15px 15px 0 0;
      }

      /* ENHANCED BUTTONS */
      .product-actions {
        display: flex;
        gap: 0.5rem;
      }

      .btn-view {
        flex: 1;
        background: transparent;
        border: 2px solid var(--primary);
        color: var(--primary);
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .btn-view::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: var(--primary);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.3s ease;
        z-index: -1;
      }

      .btn-view:hover::before {
        width: 300px;
        height: 300px;
      }

      .btn-view:hover {
        color: white;
        border-color: var(--primary);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 31, 63, 0.3);
      }

      .btn-cart {
        flex: 1;
        background: linear-gradient(135deg, var(--primary), #0066cc);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .btn-cart::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.2),
          transparent
        );
        transition: left 0.5s ease;
      }

      .btn-cart:hover::before {
        left: 100%;
      }

      .btn-cart:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 31, 63, 0.4);
        background: linear-gradient(135deg, #0066cc, var(--primary));
      }

      .btn-cart i,
      .btn-view i {
        margin-right: 0.5rem;
      }

      /* RESPONSIVE */
      @media (max-width: 768px) {
        .shop-header h1 {
          font-size: 2.5rem;
        }

        .shop-stats {
          flex-direction: column;
          gap: 1.5rem;
        }

        .product-actions {
          flex-direction: column;
        }
      }

      /* LOADING ANIMATION */
      .fade-in {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
      }

      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>

    <!-- âœ… ENHANCED SHOP HEADER -->
    <section class="shop-header">
      <div class="container">
        <h1>ðŸ”¥ Outlaw Collection</h1>
        <p class="lead">
          Where rebels find their style. Curated pieces for those who dare to be
          different.
        </p>
        <div class="shop-stats">
          <div class="shop-stat">
            <h3>500+</h3>
            <p>Unique Pieces</p>
          </div>
          <div class="shop-stat">
            <h3>24/7</h3>
            <p>Fresh Drops</p>
          </div>
          <div class="shop-stat">
            <h3>100%</h3>
            <p>Attitude</p>
          </div>
        </div>
      </div>
    </section>

    <!-- âœ… ENHANCED PRODUCT GRID -->
    <section class="product-grid">
      <div class="container">
        <h2 class="section-title">Featured Outlaws</h2>
        <div class="row g-4">
          <% products.forEach((product, index) => { %>
          <div class="col-lg-4 col-md-6 fade-in" data-index="<%= index %>">
            <div class="card product-card h-100">
              <div class="card-wrapper">
                <img
                  src="<%= product.image %>"
                  class="card-img-top"
                  alt="<%= product.title %>"
                />
                <span class="badge-category"><%= product.category %></span>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="product-description">
                  <%= product.description.substring(0, 80) %>...
                </p>
                <div class="mt-auto">
                  <p class="product-price">$<%= product.price.toFixed(2) %></p>
                  <div class="product-actions">
                    <a href="/products/<%= product._id %>" class="btn btn-view">
                      <i class="fas fa-eye"></i>Quick View
                    </a>
                    <button
                      class="btn btn-cart"
                      onclick="addToCart('<%= product._id %>', this)"
                    >
                      <i class="fas fa-shopping-bag"></i>Add to Bag
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <%- include('partials/footer') %>

    <script>
      // Add to cart function
      function addToCart(productId, button) {
        // Visual feedback (before request)
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
        button.disabled = true;

        // Send request
        fetch(`/cart/add/${productId}`)
          .then((res) => {
            if (res.ok) {
              // âœ… Visual feedback success
              button.innerHTML = '<i class="fas fa-check"></i> Added!';
              button.style.background =
                "linear-gradient(135deg, #28a745, #20c997)";
            } else {
              throw new Error("Failed to add to cart");
            }
          })
          .catch(() => {
            button.innerHTML = '<i class="fas fa-times"></i> Error';
            button.style.background = "#dc3545";
          })
          .finally(() => {
            setTimeout(() => {
              button.innerHTML =
                '<i class="fas fa-shopping-bag"></i> Add to Bag';
              button.style.background =
                "linear-gradient(135deg, var(--primary), #0066cc)";
              button.disabled = false;
            }, 2000);
          });
      }

      // Stagger animation for product cards
      document.addEventListener("DOMContentLoaded", function () {
        const cards = document.querySelectorAll(".fade-in");
        cards.forEach((card, index) => {
          setTimeout(() => {
            card.style.opacity = "1";
            card.style.transform = "translateY(0)";
          }, index * 100);
        });
      });
    </script>
  </body>
</html>
