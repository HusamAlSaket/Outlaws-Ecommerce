<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your Cart - Ecommerce Outlaws</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Barlow', sans-serif;
      background-color: #f8f9fa;
    }
    .cart-header {
      background-color: #001f3f;
      color: white;
      padding: 2rem;
      text-align: center;
    }
    .cart-card img {
      height: 120px;
      object-fit: cover;
    }
    .btn-remove {
      color: red;
      font-weight: bold;
    }
  </style>
</head>
<body>

<%- include('partials/navbar') %>

<div class="cart-header">
  <h1>Your Shopping Cart ðŸ›’</h1>
</div>

<div class="container my-5">
  <% if (cartItems.length === 0) { %>
    <div class="alert alert-info text-center">Your cart is empty.</div>
  <% } else { %>
    <div class="row">
      <% cartItems.forEach(item => { %>
        <div class="col-md-12 mb-4">
          <div class="card cart-card shadow-sm">
            <div class="row g-0 align-items-center">
              <div class="col-md-2">
                <img src="<%= item.image %>" class="img-fluid rounded-start" alt="<%= item.title %>">
              </div>
              <div class="col-md-7">
                <div class="card-body">
                  <h5 class="card-title"><%= item.title %></h5>
                  <p class="card-text">Quantity: <%= item.qty %> | Unit Price: $<%= item.price.toFixed(2) %></p>
                  <p class="card-text"><strong>Total: $<%= item.total.toFixed(2) %></strong></p>
                </div>
              </div>
              <div class="col-md-3 text-end pe-4">
                <a href="/cart/remove/<%= item.id %>" class="btn btn-outline-danger">Remove</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="text-end">
      <h4>Cart Total: $<%= totalAmount.toFixed(2) %></h4>
      <button class="btn btn-success mt-3">Proceed to Checkout</button>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>

</body>
</html>
